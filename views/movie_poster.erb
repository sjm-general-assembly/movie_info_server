<h1><%= @page_header %></h1>
<h3><%= @movie.title %></h3>
<img src='<%= @movie.poster_url %>'/>
<br/>
<table>
	<tr>
    	<td>Title:</td>
    	<td><%= @movie.title %></td>
  	</tr>
	<tr>
    	<td>Release Date:</td>
    	<td><%= @movie.released %></td>
  	</tr>
	<tr>
    	<td>Plot:</td>
    	<td><%= @movie.plot %></td>
  	</tr>
	<tr>
    	<td>Rated:</td>
    	<td><%= @movie.rated %></td>
  	</tr>
	<tr>
    	<td>Runtime:</td>
    	<td><%= @movie.runtime %></td>
  	</tr>
	<tr>
    	<td>Genre:</td>
    	<td><%= @movie.genre %></td>
  	</tr>
	<tr>
    	<td>Director:</td>
    	<td><%= @movie.director %></td>
  	</tr>
	<tr>
    	<td>Actors:</td>
    	<td><% @movie.actors.each do |actor|  %>
    		<%= actor %><br/>
    		<% end %>
    	</td>
  	</tr>
	<tr>
    	<td>IMDB link:</td>
    	<td><a href="<%= @movie.imdb_url%>"><%= @movie.imdb_url%></td>
  	</tr>
</table> 
<br/>
<br/>
<a href="/">New Search</a>
